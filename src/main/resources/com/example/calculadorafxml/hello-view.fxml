<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.calculadorafxml.HelloController">

    <Label alignment="CENTER" fx:id="numeros" text=" " prefHeight="40" prefWidth="500" textFill="#800f14" style="-fx-font-family: 'Bodoni MT Black'; -fx-background-color: #8f8fe1"/>

    <GridPane>
        <Button fx:id="1" text="1" prefHeight="30" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="2" text="2" prefHeight="30" prefWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="1"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="3" text="3" prefHeight="30" prefWidth="100" GridPane.columnIndex="3" GridPane.rowIndex="1"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="4" text="4" prefHeight="30" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="5" text="5" prefHeight="30" prefWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="2"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="6" text="6" prefHeight="30" prefWidth="100" GridPane.columnIndex="3" GridPane.rowIndex="2"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="7" text="7" prefHeight="30" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="3"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="8" text="8" prefHeight="30" prefWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="3"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="9" text="9" prefHeight="30" prefWidth="100" GridPane.columnIndex="3" GridPane.rowIndex="3"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="0" text="0" prefHeight="30" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="4"
                onAction="#manejarBotonNumerico"/>
        <Button fx:id="punto" text="." prefHeight="30" prefWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <Button fx:id="borrar" text="CE" prefHeight="30" prefWidth="100" GridPane.columnIndex="3" GridPane.rowIndex="4"
                onAction="#limpiar"/>
        <Button fx:id="mas" text="+" prefHeight="30" prefWidth="100" GridPane.columnIndex="4" GridPane.rowIndex="1"
                onAction="#manejarBotonOperacion"/>
        <Button fx:id="menos" text="-" prefHeight="30" prefWidth="100" GridPane.columnIndex="4" GridPane.rowIndex="2"
                onAction="#manejarBotonOperacion"/>
        <Button fx:id="dividir" text="/" prefHeight="30" prefWidth="100" GridPane.columnIndex="4" GridPane.rowIndex="3"
                onAction="#manejarBotonOperacion"/>
        <Button fx:id="multiplicar" text="x" prefHeight="30" prefWidth="100" GridPane.columnIndex="4"
                GridPane.rowIndex="4" onAction="#manejarBotonOperacion"/>
        <Button fx:id="igual" text="=" prefHeight="120" prefWidth="100" GridPane.rowSpan="5" GridPane.columnIndex="5" GridPane.rowIndex="1"
                onAction="#manejarBotonResultado"/>
    </GridPane>

</VBox>
